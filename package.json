{
  "name": "homebridge-kostal-inverter",
  "displayName": "Kostal Solar Energy Generator",
  "version": "1.0.6",
  "description": "Homebridge plugin for Kostal solar inverters as energy generators with real-time data logging",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "dev": "npm run build && npm link && homebridge -D",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "homebridge-plugin",
    "homebridge",
    "kostal",
    "solar",
    "energy",
    "generator",
    "inverter",
    "renewable-energy",
    "photovoltaic"
  ],
  "engines": {
    "node": ">=18.0.0",
    "homebridge": ">=1.6.0"
  },
  "homebridge": {
    "pluginName": "homebridge-kostal-inverter",
    "displayName": "Kostal Solar Energy Generator",
    "category": "energy",
    "hasChildBridges": true
  },
  "configSchema": "config.schema.json",
  "dependencies": {
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "homebridge": "^1.6.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chr-braun/homebridge-kostal-inverter.git"
  },
  "bugs": {
    "url": "https://github.com/chr-braun/homebridge-kostal-inverter/issues"
  },
  "homepage": "https://github.com/chr-braun/homebridge-kostal-inverter#readme",
  "author": "Christian Braun",
  "license": "MIT"
}
