{
  "name": "homebridge-kostal-inverter",
  "displayName": "Kostal Inverter",
  "version": "1.1.3",
  "description": "Homebridge plugin for Kostal solar inverters with direct API integration, multi-language UI, daily push notifications, and child bridge capability",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc && cp -r src/i18n/locales dist/i18n/",
    "dev": "npm run build && npm link && homebridge -D",
    "watch": "npm run build && npm link && nodemon",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "postinstall": "bash install-python-deps.sh || echo 'Python dependencies installation failed - please run: bash install-python-deps.sh'",
    "setup-kostal": "python3 kostal_data_bridge.py --setup",
    "start-kostal": "python3 kostal_data_bridge.py"
  },
  "keywords": [
    "homebridge-plugin",
    "homebridge",
    "kostal",
    "inverter",
    "solar",
    "mqtt",
    "energy",
    "power",
    "photovoltaic",
    "renewable-energy"
  ],
  "engines": {
    "node": ">=16.0.0",
    "homebridge": ">=1.6.0"
  },
  "dependencies": {
    "node-cron": "^3.0.3",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^16.18.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "homebridge": "^1.6.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chr-braun/homebridge-kostal-inverter.git"
  },
  "bugs": {
    "url": "https://github.com/chr-braun/homebridge-kostal-inverter/issues"
  },
  "homepage": "https://github.com/chr-braun/homebridge-kostal-inverter#readme",
  "author": "Christian Braun",
  "license": "MIT"
}
